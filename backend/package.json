{
    "name": "fileshare-backend",
    "version": "0.1.0",
    "private": true,
    "description": "Minimal Node.js + Express + TypeScript backend for file sharing",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "bcrypt": "6.0.0",
        "cors": "2.8.5",
        "dotenv": "17.2.3",
        "express": "5.1.0",
        "jsonwebtoken": "9.0.2",
        "multer": "2.0.2",
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@types/bcrypt": "6.0.0",
        "@types/cors": "2.8.19",
        "@types/express": "5.0.5",
        "@types/jsonwebtoken": "9.0.10",
        "@types/multer": "2.0.0",
        "@types/node": "24.10.1",
        "ts-node": "10.9.2",
        "ts-node-dev": "2.0.0",
        "typescript": "5.9.3"
    }
}