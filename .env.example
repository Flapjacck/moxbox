# Root .env example (repo root  - combined backend/frontend):

# Backend
PORT=4200
HOST=0.0.0.0
JWT_SECRET=changeme
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=<bcrypt-hash-of-password>
FILES_DIR=./files
DATABASE_PATH=./db.sqlite

# Upload / Policy
UPLOAD_MAX_FILE_SIZE=100mb
UPLOAD_DISALLOWED_MIME_TYPES=text/html,application/javascript,text/javascript

# Frontend / Vite - client visible env values must be prefixed with VITE_
VITE_BACKEND_URL=http://localhost:4200
VITE_PORT=5173
VITE_HOST=0.0.0.0

# CORS - a comma-separated list of allowed origins (for example, when using Tailscale)
FRONTEND_URL=http://localhost:5173
FRONTEND_ALLOWED_ORIGINS=http://localhost:5173,http://<your-host-ip>:5173
