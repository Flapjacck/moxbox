# Backend server URL (without /api prefix)
VITE_BACKEND_URL=http://localhost:4200

# Backend port to use when no VITE_BACKEND_URL is set.
# If omitted, frontend will use the current host and this port (default: 4200).
VITE_BACKEND_PORT=4200

# When true, derive the backend host from the frontend host (window.location.hostname)
# This allows the dev environment to automatically target the same host you used to access
# the frontend (e.g., your Tailscale IP or local IP). Default: false
# Example: VITE_BACKEND_USE_DERIVED_HOST=true
VITE_BACKEND_USE_DERIVED_HOST=false

# API route prefix (optional, defaults to /api)
# VITE_API_PREFIX=/api
